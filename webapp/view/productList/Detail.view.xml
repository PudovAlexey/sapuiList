<mvc:View controllerName="app.controller.Detail" xmlns='sap.m' xmlns:mvc='sap.ui.core.mvc' xmlns:f="sap.ui.layout.form">
    <Page id="detailId" class="myAppDemoDetail" title="Detail page">

        <Bar>
            <contentRight>
                <Button icon="sap-icon://full-screen" press=".onFullScreen" type="Transparent" width="auto" />
                <Button icon="sap-icon://decline" press=".onCloseDetail" type="Transparent" width="auto" />
            </contentRight>
        </Bar>
        <Panel>
            <ObjectListItem id='Object' title="{invoice>ProductName} {}" />
        </Panel>

        <content>
            <List id="items" class="sapUiResponsiveMargin" width="auto" items="{
            path: 'invoice>product',
            sorter: {
                path: 'ProductName'
            }
            }">
                <headerToolbar>
                    <Toolbar>
                        <Title src="{invoice>icon}" text="{invoice>ProductName}" bold="true" />
                        <ToolbarSpacer />
                        <SearchField id="searchDetails" search=".onDetailSearch" width="30%" />
                        <Button icon="sap-icon://sort" press=".onSort" />
                        <Button icon="sap-icon://filter" press="" />
                    </Toolbar>
                </headerToolbar>
                <items>
                    <CustomListItem id="DetailList" icon="{invoice>icon}" title="{invoice>name}" iconDensityAware="false" iconInset="false" type="Navigation" press=".onInvoiceInformation" numberState="Success" number="{path: 'invoice>currentPrice',
                            formatter: '.formatter.formatPriceAfterDiscount'}">

                        <content>
                                <Avatar src="{invoice>icon}" class="sapUiTinyMarginBegin sapUiSmallMarginTop sapUiSmallMarginBottom" />
                                <Title text="{invoice>name}" level="H5" class="sapUiTinyMarginBegin sapUiTinyMarginBottom" />
                                <ToolbarSpacer />
                                <VBox class="sapUitinyMarginTop">
                                    <HBox>
                                        <HBox>
                                            <Label text="current price:" />
                                        </HBox>
                                        <HBox>
                                            <ObjectNumber state="Success" number="{path: 'invoice>currentPrice',
                                                    formatter: '.formatter.formatPrice'}" />
                                        </HBox>
                                    </HBox>
                                    <HBox>
                                        <HBox>
                                            <Label text="Old price:" />
                                        </HBox>
                                        <HBox>
                                            <ObjectNumber state="Error" number="{path: 'invoice>priceBeforeDiscount',
                                                        formatter: '.formatter.formatPrice'}" />
                                        </HBox>
                                    </HBox>
                                </VBox>
                                <Toolbar>
                                    <RatingIndicator/>
                                    <ToolbarSpacer/>
                                    <Button icon="sap-icon://thumb-up"/>
                                    <Button  icon="sap-icon://cart-3"/>
                                    <Button  icon="sap-icon://add" id="addButton"
                                    press="handlePopoverPress"/>

                                </Toolbar>
                        </content>
                    </CustomListItem>
                </items>
            </List>
        </content>
    </Page>
</mvc:View>