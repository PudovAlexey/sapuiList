<mvc:View controllerName="app.controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
	<Page>
		<customHeader>
			<Bar>
				<contentLeft>
					<Image />	
				</contentLeft>

				<contentMiddle>
					<Button press=".onHomeClick" text="HOME"/>
					<Button press=".onShopClick" text="SHOP"/>
					<Button text="PAGE"/>
					<Button text="BLOG"/>
					<Button text="CONTACT"/>
				</contentMiddle>

				<contentRight>
					<Button icon="sap-icon://account"/>
					<Button icon="sap-icon://search"/>
					<Button press="onWishListClick" icon="sap-icon://thumb-up">
						<customData>
							<BadgeCustomData
								id="bagdeWishList"
								key="badge"
								value="0"/>
						</customData>
					</Button>
					<Button press="onShoppingCartClick" icon="sap-icon://cart-full">
						<customData>
							<BadgeCustomData
								id="bagdeCart"
								key="badge"
								value="0"/>
						</customData>
					</Button>
				</contentRight>
			</Bar>
		</customHeader>
		<Shell>
			<SplitApp id="app" class=".myAppDemoWT"/>
		</Shell>
	</Page>
</mvc:View>