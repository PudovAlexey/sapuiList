<mvc:View 
xmlns="sap.m"
xmlns:mvc="sap.ui.core.mvc"
xmlns:grid="sap.ui.layout.cssgrid"
xmlns:f="sap.f"
xmlns:dnd="sap.ui.core.dnd"
xmlns:wt="app.control"
xmlns:dnd-grid="sap.f.dnd">
    <Panel id="panelForGridList">
        <headerToolbar>
            <Toolbar height="3rem">
                <Title text="Grid List with Drag and Drop" />
            </Toolbar>
        </headerToolbar>

        <f:GridList id="gridList" headerText="GridList header" items="{invoice>/Invoices/0/product/}">

            <f:dragDropConfig>
                <dnd:DragInfo sourceAggregation="items" />
                <dnd-grid:GridDropInfo targetAggregation="items" dropPosition="Between" dropLayout="Horizontal" drop="onDrop" />
            </f:dragDropConfig>

            <f:customLayout>
                <grid:GridBoxLayout boxMinWidth="17rem" />
            </f:customLayout>

            <f:GridListItem counter="{counter}" highlight="{highlight}" type="{type}" unread="{unread}">
                <VBox height="100%">
                    <VBox class="sapUiSmallMargin">
                        <layoutData>
                            <FlexItemData growFactor="1" shrinkFactor="0" />
                        </layoutData>
                        <HBox>
                            <Avatar src="{invoice>icon}"/>
                            <Text text="{invoice>description}"/>
                        </HBox>
                                <Toolbar>
                                        <VBox class="sapUitinyMarginTop">
                                            <HBox>
                                                <HBox>
                                                    <Label text="current price:" />
                                                </HBox>
                                                <HBox>
                                                    <ObjectNumber state="Success" number="{path: 'invoice>currentPrice',
                                                            formatter: '.formatter.formatPrice'}" />
                                                </HBox>
                                            </HBox>
                                            <HBox>
                                                <HBox>
                                                    <Label text="Old price:" />
                                                </HBox>
                                                <HBox>
                                                    <ObjectNumber state="Error" number="{path: 'invoice>priceBeforeDiscount',
                                                                formatter: '.formatter.formatPrice'}" />
                                                </HBox>
                                            </HBox>
                                        </VBox>
                                    <ToolbarSpacer/>
                                    <RatingIndicator enabled="false" value="{path: 'invoice>productRating'}" />
                                </Toolbar>

                                
                    </VBox>
                </VBox>
            </f:GridListItem>
        </f:GridList>
    </Panel>
</mvc:View>