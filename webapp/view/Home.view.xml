<xml:View controllerName="sap.ui.listItem.controller.Home" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <Shell>
        <SplitApp id="home" initialDetail="detail" initialMaster="master">
            <masterPages backgroundDesign="red">
                <Page title="{i18n>Title}">
                    <headerContent>
                        <Text text="test" />
                    </headerContent>
                    <Toolbar>
                        <ToolbarSpacer />
                        <SearchField id="searchField" showRefreshButton="true" search=".onSearchField" width="50%" />
                        <Button icon="sap-icon://sort" press=".onSortButtonPressed" type="Transparent" width="auto" />
                        <Button icon="sap-icon://filter" type="Transparent" width="auto" />
                    </Toolbar>
                    <content>
                        <mvc:XMLView id="itemList" viewName="sap.ui.listItem.view.productList.ProductList" />
                    </content>
                </Page>
            </masterPages>
            <detailPages>
                <Page>
                    <content>
                        <mvc:XMLView viewName="sap.ui.listItem.view.productList.ProductListInformation" />
                    </content>
                </Page>
            </detailPages>

        </SplitApp>
    </Shell>

</xml:View>